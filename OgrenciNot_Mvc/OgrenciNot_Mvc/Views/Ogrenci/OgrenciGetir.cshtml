@model  OgrenciNot_Mvc.Models.EntityFramework.TBLOGRENCILER

@{
    ViewBag.Title = "OgrenciGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Guncelle", "Ogrenci", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.OGRAD)
        @Html.TextAreaFor(m => m.OGRAD, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.OGRSOYAD)
        @Html.TextAreaFor(m => m.OGRSOYAD, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.OGRFOTO)
        @Html.TextAreaFor(m => m.OGRFOTO, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.OGRKULUP)
        @*@Html.TextAreaFor(m => m.OGRKULUP, new { @class = "form-control" })*@
        @Html.DropDownListFor(m => m.TBLKULUPLER.KULUPID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })

    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.OGRCINSIYET)
        @Html.TextAreaFor(m => m.OGRCINSIYET, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.OGRNCIID)
    <div style="margin-top:15px">
        <button class="btn btn-info">Güncelle</button>

    </div>
}


